<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	jcr:primaryType="nt:unstructured"
	jcr:title="Modale Dettaglio Properties"
	extraClientlibs="[cq.author.accordion]"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/tabs"
				maximized="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">

					<general jcr:primaryType="nt:unstructured"
						jcr:title="ProprietÃ  Componente"
						sling:resourceType="granite/ui/components/coral/foundation/container"
						margin="{Boolean}true">
						<items jcr:primaryType="nt:unstructured">
							<columns jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/container"
								margin="{Boolean}true">
								<items jcr:primaryType="nt:unstructured">
									<column jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/container">
										<items jcr:primaryType="nt:unstructured">

											<titolo jcr:primaryType="nt:unstructured"
												jcr:title="Titolo Modale" fieldLabel="Titolo Modale"
												sling:resourceType="cq/gui/components/authoring/dialog/richtext"
												name="./titoloModale" useFixedInlineToolbar="{Boolean}true"
												removeSingleParagraphContainer="{Boolean}true">
												<rtePlugins jcr:primaryType="nt:unstructured"
													removeSingleParagraphContainer="true">
													<format jcr:primaryType="nt:unstructured"
														features="bold,italic" />
													<justify jcr:primaryType="nt:unstructured"
														features="*" />
													<links jcr:primaryType="nt:unstructured"
														features="modifylink,unlink" />
													<lists jcr:primaryType="nt:unstructured" features="*" />
													<paraformat jcr:primaryType="nt:unstructured"
														features="*">
														<formats jcr:primaryType="nt:unstructured">
															<default_p jcr:primaryType="nt:unstructured"
																description="Paragraph" tag="p" />
															<default_h1 jcr:primaryType="nt:unstructured"
																description="Heading 1" tag="h1" />
															<default_h2 jcr:primaryType="nt:unstructured"
																description="Heading 2" tag="h2" />
															<default_h3 jcr:primaryType="nt:unstructured"
																description="Heading 3" tag="h3" />
														</formats>
													</paraformat>
													<tracklinks jcr:primaryType="nt:unstructured"
														features="*" />
													<table jcr:primaryType="nt:unstructured" features="*" />
													<subsuperscript
														jcr:primaryType="nt:unstructured" features="*" />
													<misctools jcr:primaryType="nt:unstructured"
														features="*" />
													<experience-aem
														jcr:primaryType="nt:unstructured" features="*" />
												</rtePlugins>
												<uiSettings jcr:primaryType="nt:unstructured">
													<cui jcr:primaryType="nt:unstructured">
														<inline jcr:primaryType="nt:unstructured"
															toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,justify#justifyleft,justify#justifycenter,justify#justifyright,#lists,experience-aem#colorPicker,links#modifylink,links#unlink,#paraformat,table#createoredit,table#removetable,misctools#sourceedit]">
															<popovers jcr:primaryType="nt:unstructured">
																<justify jcr:primaryType="nt:unstructured"
																	items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
																	ref="justify" />
																<lists jcr:primaryType="nt:unstructured"
																	items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
																	ref="lists" />
																<misctools jcr:primaryType="nt:unstructured"
																	items="[misctools#specialchars]" ref="misctools" />
																<paraformat jcr:primaryType="nt:unstructured"
																	items="paraformat:getFormats:paraformat-pulldown"
																	ref="paraformat" />
															</popovers>
														</inline>
														<dialogFullScreen
															jcr:primaryType="nt:unstructured"
															toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,justify#justifyleft,justify#justifycenter,justify#justifyright,#lists,experience-aem#colorPicker,links#modifylink,links#unlink,#paraformat,table#createoredit,table#removetable,misctools#sourceedit]">
															<popovers jcr:primaryType="nt:unstructured">
																<justify jcr:primaryType="nt:unstructured"
																	items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
																	ref="justify" />
																<lists jcr:primaryType="nt:unstructured"
																	items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
																	ref="lists" />
																<misctools jcr:primaryType="nt:unstructured"
																	items="[misctools#specialchars]" ref="misctools" />
																<paraformat jcr:primaryType="nt:unstructured"
																	items="paraformat:getFormats:paraformat-pulldown"
																	ref="paraformat" />
															</popovers>
														</dialogFullScreen>
													</cui>
												</uiSettings>
											</titolo>

											<paragrafo jcr:primaryType="nt:unstructured"
												jcr:title="Paragrafo Modale" fieldLabel="Paragrafo Modale"
												sling:resourceType="cq/gui/components/authoring/dialog/richtext"
												name="./paragrafoModale"
												useFixedInlineToolbar="{Boolean}true"
												removeSingleParagraphContainer="{Boolean}true">
												<rtePlugins jcr:primaryType="nt:unstructured"
													removeSingleParagraphContainer="true">
													<format jcr:primaryType="nt:unstructured"
														features="bold,italic" />
													<justify jcr:primaryType="nt:unstructured"
														features="*" />
													<links jcr:primaryType="nt:unstructured"
														features="modifylink,unlink" />
													<lists jcr:primaryType="nt:unstructured" features="*" />
													<paraformat jcr:primaryType="nt:unstructured"
														features="*">
														<formats jcr:primaryType="nt:unstructured">
															<default_p jcr:primaryType="nt:unstructured"
																description="Paragraph" tag="p" />
															<default_h1 jcr:primaryType="nt:unstructured"
																description="Heading 1" tag="h1" />
															<default_h2 jcr:primaryType="nt:unstructured"
																description="Heading 2" tag="h2" />
															<default_h3 jcr:primaryType="nt:unstructured"
																description="Heading 3" tag="h3" />
														</formats>
													</paraformat>
													<tracklinks jcr:primaryType="nt:unstructured"
														features="*" />
													<table jcr:primaryType="nt:unstructured" features="*" />
													<subsuperscript
														jcr:primaryType="nt:unstructured" features="*" />
													<misctools jcr:primaryType="nt:unstructured"
														features="*" />
													<experience-aem
														jcr:primaryType="nt:unstructured" features="*" />
												</rtePlugins>
												<uiSettings jcr:primaryType="nt:unstructured">
													<cui jcr:primaryType="nt:unstructured">
														<inline jcr:primaryType="nt:unstructured"
															toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,justify#justifyleft,justify#justifycenter,justify#justifyright,#lists,experience-aem#colorPicker,links#modifylink,links#unlink,#paraformat,table#createoredit,table#removetable,misctools#sourceedit]">
															<popovers jcr:primaryType="nt:unstructured">
																<justify jcr:primaryType="nt:unstructured"
																	items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
																	ref="justify" />
																<lists jcr:primaryType="nt:unstructured"
																	items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
																	ref="lists" />
																<misctools jcr:primaryType="nt:unstructured"
																	items="[misctools#specialchars]" ref="misctools" />
																<paraformat jcr:primaryType="nt:unstructured"
																	items="paraformat:getFormats:paraformat-pulldown"
																	ref="paraformat" />
															</popovers>
														</inline>
														<dialogFullScreen
															jcr:primaryType="nt:unstructured"
															toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,justify#justifyleft,justify#justifycenter,justify#justifyright,#lists,experience-aem#colorPicker,links#modifylink,links#unlink,#paraformat,table#createoredit,table#removetable,misctools#sourceedit]">
															<popovers jcr:primaryType="nt:unstructured">
																<justify jcr:primaryType="nt:unstructured"
																	items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
																	ref="justify" />
																<lists jcr:primaryType="nt:unstructured"
																	items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
																	ref="lists" />
																<misctools jcr:primaryType="nt:unstructured"
																	items="[misctools#specialchars]" ref="misctools" />
																<paraformat jcr:primaryType="nt:unstructured"
																	items="paraformat:getFormats:paraformat-pulldown"
																	ref="paraformat" />
															</popovers>
														</dialogFullScreen>
													</cui>
												</uiSettings>
											</paragrafo>
											<cta2 jcr:primaryType="nt:unstructured"
												jcr:title="Configurazione CTA Secondaria"
												sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
												<items jcr:primaryType="nt:unstructured">
													<ctaSecondaria
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/select"
														granite:class="cq-dialog-dropdown-showhide"
														fieldLabel="Variante" name="./ctaSecondaria">
														<items jcr:primaryType="nt:unstructured">
															<option1 jcr:primaryType="nt:unstructured"
																selected="true" text="Chiusura Modale" value="modale" />
															<option2 jcr:primaryType="nt:unstructured"
																text="URL" value="url" />
														</items>
														<granite:data
															jcr:primaryType="nt:unstructured"
															cq-dialog-dropdown-showhide-target=".ctaSecondaria-showhide-target" />
													</ctaSecondaria>

													<labelSecondaria
														jcr:primaryType="nt:unstructured" required="true"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Label CTA Secondaria"
														name="./labelCTASecondaria" />

													<altCTASecondaria
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Alt Text CTA Secondaria"
														name="./altCTASecondaria" />

													<tipologiaUrl
														jcr:primaryType="nt:unstructured"
														granite:class="ctaSecondaria-showhide-target"
														sling:resourceType="granite/ui/components/coral/foundation/container">
														<items jcr:primaryType="nt:unstructured">
															<urlCTASecondaria
																jcr:primaryType="nt:unstructured"
																sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
																fieldDescription="Inserisci url per la CTA"
																required="true" fieldLabel="Path Link CTA"
																name="./urlCTASecondaria" />
															<targetCTASecondaria
																jcr:primaryType="nt:unstructured"
																sling:resourceType="granite/ui/components/coral/foundation/form/select"
																fieldLabel="Target" name="./targetCTASecondaria">
																<items jcr:primaryType="nt:unstructured">
																	<option1 jcr:primaryType="nt:unstructured"
																		text="Self" value="_self" selected="true" />
																	<option2 jcr:primaryType="nt:unstructured"
																		text="Blank" value="_blank" />
																</items>
															</targetCTASecondaria>
														</items>
														<granite:data
															jcr:primaryType="nt:unstructured"
															showhidetargetvalue="url" />
													</tipologiaUrl>
												</items>
											</cta2>
											<cta1 jcr:primaryType="nt:unstructured"
												jcr:title="Configurazione CTA Primaria"
												sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
												<items jcr:primaryType="nt:unstructured">
													<labelPrimaria
														jcr:primaryType="nt:unstructured" required="true"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Label CTA Primaria" name="./labelCTAPrimaria" />
													<urlCTAPrimaria
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
														fieldDescription="Inserisci url per la CTA oppure l'ancora ad un componente in pagina"
														required="true" fieldLabel="Ancora/Link CTA"
														name="./urlCTAPrimaria" />
													<targetCTAPrimaria
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/select"
														fieldLabel="Target" name="./targetCTAPrimaria">
														<items jcr:primaryType="nt:unstructured">
															<option1 jcr:primaryType="nt:unstructured"
																text="Self" value="_self" selected="true" />
															<option2 jcr:primaryType="nt:unstructured"
																text="Blank" value="_blank" />
														</items>
													</targetCTAPrimaria>
													<altCTAPrimaria
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Alt Text CTA Primaria" name="./altCTAPrimaria" />

												</items>
											</cta1>
										</items>
									</column>
								</items>
							</columns>
						</items>
					</general>

				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
