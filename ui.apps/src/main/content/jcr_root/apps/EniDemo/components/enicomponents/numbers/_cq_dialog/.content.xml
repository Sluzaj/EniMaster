<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	extraClientlibs="[cq.author.accordion]"
	jcr:primaryType="nt:unstructured" jcr:title="Numbers Properties"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/tabs"
				maximized="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">


					<configItem jcr:primaryType="nt:unstructured"
						jcr:title="Configurazione Item"
						sling:resourceType="granite/ui/components/coral/foundation/container"
						margin="{Boolean}true">
						<items jcr:primaryType="nt:unstructured">
							<columns jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/container"
								margin="{Boolean}true">
								<items jcr:primaryType="nt:unstructured">
									<column jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/container">
										<items jcr:primaryType="nt:unstructured">
											<gestioneComponente
												jcr:primaryType="nt:unstructured"
												jcr:title="Gestione Componente"
												sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
												<items jcr:primaryType="nt:unstructured">
													<id jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="ID Componente" name="./id" />
													<titolo jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Titolo" name="./titolo" />
													<sottoTitolo jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Sottotitolo" name="./sottotitolo" />
													<assetLogo
														granite:class="cmp-image__editor-file-upload"
														jcr:primaryType="nt:unstructured"
														sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
														autoStart="{Boolean}false" class="cq-droptarget"
														fileNameParameter="./immagineSingleName"
														fileReferenceParameter="./logoReference"
														mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
														multiple="{Boolean}false" name="./immagineSingle"
														title="Logo" fieldLabel="Logo"
														uploadUrl="${suffix.path}" useHTML5="{Boolean}true" />
														
													<numberSx jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														maxlength="3" fieldLabel="Numero Sinistra" name="./numeroSx" />
													<titoloItemSx jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Titolo Item Sinistra" name="./titoloItemSx" />
													<sottoTitoloItemSx jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Sottotitolo Item Sinistra" name="./sottoTitoloSx" />
														
													<numberDx jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														maxlength="3" fieldLabel="Numero Destra" name="./numeroDx" />
													<titoloItemDx jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Titolo Item Destra" name="./titoloItemDx" />
													<sottoTitoloItemDx jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
														fieldLabel="Sottotitolo Item Destra" name="./sottoTitoloDx" />
													
												</items>
											</gestioneComponente>

										</items>
									</column>
								</items>
							</columns>
						</items>
					</configItem>

				</items>
			</tabs>
		</items>
	</content>
</jcr:root>

